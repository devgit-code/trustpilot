<%- include ("../layouts/header") %>

<div class="container" style="margin-top: 50px; margin-bottom: 50px;">
    <div class="row">
        <% blogs.forEach(function (blog) { %>
            <div class="col-lg-4">
                <!-- Blog post-->
                <div class="card mb-4">
                    <a href="#!"><img class="card-img-top" src="<%= blog.featuredImage %>" alt="<%= blog.title %>" /></a>
                    <div class="card-body">
                        <div class="small text-muted"><%= blog.createdAt %></div>
                        <h2 class="card-title h4"><%= blog.title || "" %></h2>
                        <p class="card-text"><%- blog.excerpt || "" %></p>
                        <a class="btn btn-primary" href="<%= '/blog/' + blog.slug %>">Read more â†’</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!-- Pagination-->
            <nav aria-label="Pagination">
                <hr class="my-0" />
                <ul class="pagination justify-content-center my-4">
                    <% for (let a = 1; a < pages; a++) { %>
                        <li class="page-item <%= (page == a ? 'active' : '') %>" aria-current="page"><a class="page-link" href="<%= '/blog?page=' + a %>"><%= a %></a></li>
                    <% } %>
                </ul>
            </nav>
        </div>
    </div>
</div>

<%- include ("../layouts/footer") %>