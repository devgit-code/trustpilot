<%- include ("../layouts/header") %>

<!-- Page content-->
<div class="container mt-5" style="margin-top: 50px; margin-bottom: 50px;">
    <div class="row">
        <div class="col-lg-12">
            <!-- Post content-->
            <article>
                <!-- Post header-->
                <header class="mb-4">
                    <!-- Post title-->
                    <h1 class="fw-bolder mb-1"><%= blog.title %></h1>
                    <!-- Post meta content-->
                    <div class="text-muted fst-italic mb-2">Posted on <%= blog.createdAt %></div>
                    <!-- Post categories-->
                    <% blog.categories.forEach(function (category) { %>
                        <a class="badge bg-secondary text-decoration-none link-light" href="javascript:void(0)"><%= category %></a>
                    <% }) %>
                </header>
                <!-- Preview image figure-->
                <figure class="mb-4"><img class="img-fluid rounded" src="<%= blog.featuredImage %>" alt="<%= blog.title %>" /></figure>
                <!-- Post content-->
                <section class="mb-5">
                    <%- blog.content %>
                </section>
            </article>
        </div>
    </div>
</div>

<%- include ("../layouts/footer") %>